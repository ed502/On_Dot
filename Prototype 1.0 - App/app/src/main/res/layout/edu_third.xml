<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".Educate.EduThird">
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/edu3_text"
            android:text="모음"
            android:fontFamily="@font/nanumgothic"
            android:textColor="@color/colorWhite"
            android:textSize="100dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnCount="2"
            android:orientation="vertical"
            android:rowCount="3">

            <LinearLayout
                android:id="@+id/edu3_circle1"
                android:orientation="vertical"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="20dp"
                android:background="@drawable/stroke_circle" />

            <LinearLayout
                android:id="@+id/edu3_circle2"
                android:orientation="vertical"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="20dp"
                android:background="@drawable/stroke_circle" />

            <LinearLayout
                android:id="@+id/edu3_circle3"
                android:orientation="vertical"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="20dp"
                android:background="@drawable/stroke_circle" />

            <LinearLayout
                android:id="@+id/edu3_circle4"
                android:orientation="vertical"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="20dp"
                android:background="@drawable/stroke_circle" />

            <LinearLayout
                android:id="@+id/edu3_circle5"
                android:orientation="vertical"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="20dp"
                android:background="@drawable/stroke_circle" />

            <LinearLayout
                android:id="@+id/edu3_circle6"
                android:orientation="vertical"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="20dp"
                android:background="@drawable/stroke_circle" />


        </GridLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/edu_third_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:gravity="bottom">
        <ImageView
            android:layout_margin="20dp"
            android:src="@drawable/kakao_image"
            android:layout_width="102px"
            android:layout_height="15px"/>
    </LinearLayout>
</FrameLayout>